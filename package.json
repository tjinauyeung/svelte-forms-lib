{
  "name": "svelte-forms-lib",
  "version": "0.2.4",
  "description": "Svelte forms lib - A lightweight library for managing forms in Svelte v3",
  "scripts": {
    "start": "rollup -c rollup.config.js",
    "build": "NODE_ENV=production rollup -c rollup.config.js",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "format": "prettier --write lib/**/*.{js,css}"
  },
  "files": [
    "build/*",
    "lib/*"
  ],
  "svelte": "./lib/index.js",
  "author": "Tjin Au Yeung",
  "browserslist": [
    "last 1 chrome versions"
  ],
  "keywords": [
    "svelte",
    "forms",
    "validation",
    "form-validation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tjinauyeung/svelte-forms-lib"
  },
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "license": "MIT",
  "dependencies": {
    "property-expr": "1.5.1",
    "svelte": "3.16.5"
  },
  "devDependencies": {
    "@types/chance": "1.0.6",
    "@types/jest": "24.0.18",
    "@types/yup": "0.26.23",
    "chance": "1.1.0",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2",
    "rollup": "1.20.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-svelte": "5.1.0",
    "yup": "0.27.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run test"
    }
  }
}
